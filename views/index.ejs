<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0;
        }
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        .prodi-badge {
            font-size: 0.8em;
            margin: 2px;
        }
        .api-endpoint {
            background-color: #f8f9fa;
            border-radius: 5px;
            padding: 10px;
            font-family: monospace;
            font-size: 0.9em;
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-file-alt me-2"></i>
                Generate Document API
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/templates">Templates</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/docs">API Docs</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container text-center">
            <h1 class="display-4 mb-4">
                <i class="fas fa-magic me-3"></i>
                Generate Document API
            </h1>
            <p class="lead mb-4">
                Sistem Dynamic Multi-Prodi untuk generate dokumen otomatis<br>
                Dengan deteksi field dinamis dari database
            </p>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="d-flex justify-content-center flex-wrap">
                        <span class="badge bg-light text-dark me-2 mb-2">
                            <i class="fas fa-database me-1"></i>Dynamic Fields
                        </span>
                        <span class="badge bg-light text-dark me-2 mb-2">
                            <i class="fas fa-graduation-cap me-1"></i>Multi-Prodi
                        </span>
                        <span class="badge bg-light text-dark me-2 mb-2">
                            <i class="fas fa-file-word me-1"></i>DOCX Templates
                        </span>
                        <span class="badge bg-light text-dark me-2 mb-2">
                            <i class="fas fa-qrcode me-1"></i>QR Code
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container my-5">
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Error: <%= error %>
        </div>
        <% } %>

        <!-- Document Types Overview -->
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="mb-4">
                    <i class="fas fa-file-alt me-2 text-primary"></i>
                    Available Document Types
                </h2>
                <% if (typeof documentTypes !== 'undefined' && Object.keys(documentTypes).length > 0) { %>
                    <% Object.keys(documentTypes).forEach(type => { %>
                    <div class="card mb-4 card-hover">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-folder me-2"></i>
                                <%= type.toUpperCase() %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted mb-3">
                                Template dokumen <%= type %> tersedia untuk <%= documentTypes[type].length %> program studi
                            </p>
                            
                            <!-- Prodi Badges -->
                            <div class="mb-3">
                                <strong>Program Studi:</strong><br>
                                <% documentTypes[type].forEach(doc => { %>
                                <span class="badge bg-secondary prodi-badge">
                                    <i class="fas fa-graduation-cap me-1"></i>
                                    <%= doc.prodi %>
                                </span>
                                <% }); %>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex flex-wrap gap-2">
                                <a href="/templates?type=<%= type %>" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>
                                    View Templates
                                </a>
                                <% documentTypes[type].forEach(doc => { %>
                                <a href="/generate/<%= type %>/<%= doc.prodi %>" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus me-1"></i>
                                    Generate <%= doc.prodi %>
                                </a>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    Tidak ada template dokumen yang tersedia. Silakan jalankan seeder terlebih dahulu.
                </div>
                <% } %>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="mb-4">
                    <i class="fas fa-rocket me-2 text-success"></i>
                    Quick Actions
                </h2>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 card-hover">
                    <div class="card-body text-center">
                        <i class="fas fa-eye fa-2x text-primary mb-3"></i>
                        <h5 class="card-title">Template Explorer</h5>
                        <p class="card-text">Jelajahi semua template yang tersedia dan lihat field-field yang dibutuhkan</p>
                        <a href="/templates" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-1"></i>
                            Explore Templates
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 card-hover">
                    <div class="card-body text-center">
                        <i class="fas fa-code fa-2x text-info mb-3"></i>
                        <h5 class="card-title">API Documentation</h5>
                        <p class="card-text">Dokumentasi lengkap API endpoints dan cara penggunaannya</p>
                        <a href="/docs" class="btn btn-info text-white">
                            <i class="fas fa-book me-1"></i>
                            View API Docs
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100 card-hover">
                    <div class="card-body text-center">
                        <i class="fas fa-github fa-2x text-dark mb-3"></i>
                        <h5 class="card-title">Source Code</h5>
                        <p class="card-text">Akses source code lengkap di GitHub repository</p>
                        <a href="https://github.com/devnolife/generate-document-api" target="_blank" class="btn btn-dark">
                            <i class="fab fa-github me-1"></i>
                            GitHub Repo
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- API Endpoints Preview -->
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">
                    <i class="fas fa-plug me-2 text-warning"></i>
                    Quick API Reference
                </h2>
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-cogs me-2"></i>Main Endpoints</h5>
                        <div class="api-endpoint">
                            <strong>GET</strong> /api/document-config/types
                        </div>
                        <div class="api-endpoint">
                            <strong>GET</strong> /api/document-config/fields/{type}
                        </div>
                        <div class="api-endpoint">
                            <strong>POST</strong> /api/generate-document/{type}/{prodi}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-list me-2"></i>Legacy Support</h5>
                        <div class="api-endpoint">
                            <strong>GET</strong> /api/templates
                        </div>
                        <div class="api-endpoint">
                            <strong>GET</strong> /api/templates/{type}/{prodi}/fields
                        </div>
                        <div class="api-endpoint">
                            <strong>POST</strong> /api/generate-document/{type}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Generate Document API</h5>
                    <p class="text-muted">Dynamic Multi-Prodi Document Generation System</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-1">Dibuat oleh devnolife</p>
                    <p class="text-muted">
                        <i class="fas fa-server me-1"></i>
                        Server running on port 8080
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
